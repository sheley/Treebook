<div class="page-header">
  <h1>Every Status Ever!</h1>
</div>

<%= link_to "Make a New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.user.full_name %></strong>
  <p><%= status.context %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">
      | <%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: { confirm: "Do you really want to delete that?"} %>
    </span>
  </div>
</div>
<% end %>